<%= form_for [refinery, :superinquiries_admin, @superinquiry] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @superinquiry,
              :include_object_name => true %>

  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>

  </div>

  <%= f.fields_for :inquiry_inputs do |builder| %>
    <%= render "inquiry_input_fields", :f => builder %>
  <% end -%>
  <p><%= link_to_add_fields "Přidat formulářové pole", f, :inquiry_inputs %></p>
  
  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.superinquiries.admin.superinquiries.superinquiry'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @superinquiry.title) %>
<% end -%>
